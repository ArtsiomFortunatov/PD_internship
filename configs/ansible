        name: docker
        state: started
    - name: insatll Python3
      yum:
        name: python37
        state: latest
      vars:
          ansible_python_interpreter: /bin/python2.7
    - name: insatll Modyle
      pip:
        name: "docker<5"
        executable: pip3.7
    - name: container nginx
